.container{
    display: flex;
    flex-direction:column;
    align-items: center;
    background-color:#b3d4db;
}

.avatar{
    width:200rpx;
    height:200rpx;
    margin-top:160rpx;
    border-radius: 50%;
}

.motto{
    margin-top:100rpx;
    font-size:32rpx;
    font-weight: bold;
    margin-bottom: 150rpx;
}

.journey-container{
    margin-top: 50rpx;
    border: 1px solid #405f80;
    width: 250rpx;
    height: 80rpx;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.journey{
    font-size:25rpx;
    font-weight: bold;
    color: #405f80;
}

page{
    height: 100%;
    background-color:#b3d4db;
}
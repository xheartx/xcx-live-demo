.comment-wrapper{
  position: absolute;
  left: 0;
  right: 110rpx;
  bottom: 0;
  height: 25%;
  padding: 10rpx;
  background-color: rgba(0,0,0,.1);
  overflow: auto;
}
.comment-wrapper .prompt{
  font-size: 25rpx;
  color: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.comment-wrapper .prompt .icon{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.comment-wrapper .comment-item{
  font-size: 25rpx;
  color: rgba(255,255,255,.9);
  margin-bottom: 10rpx;
}
.comment-wrapper .comment-item:last-child{
  margin-bottom: 0;
}
.comment-wrapper .comment-item .name{
  color: rgba(209,135,50,1);
  float: left;
  margin-right: 10rpx;
}
.comment-wrapper .comment-item .content{
  white-space: initial;
}